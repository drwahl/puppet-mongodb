### THIS FILE IS MANAGED BY PUPPET
### <%= file %>

# IP address to which the mongod service will bind
<% if @bind_ip -%>
bind_ip        = <%= bind_ip %>
<% else -%>
#bind_ip        = 0.0.0.0
<% end -%>
# TCP port to which the mongod service will bind
port        = <%= port %>
# If true, mongod will run in daemon mode. If false,
# mongod will run in the foreground
fork        = <%= dbfork %>
# Filesystem location to store the pidfile
pidfilepath = <%= pidfilepath %>
# Filesystem location to write application logs
logpath     = <%= logpath %>
# Filesystem location to store database binary data
dbpath      = <%= dbpath %>
# Store each DB in a folder under dbpath
directoryperdb = <%= directoryperdb %>
# If true, mongod will enable write-ahead journaling
journal     = <%= journal %>

# Enables periodic logging of CPU utilization and I/O wait
<% if @cpu -%>
cpu = <%= cpu %>
<% else -%>
#cpu = true
<% end -%>

# Turn on/off security.  Off is currently the default
<% if @noauth -%>
noauth = <%= noauth %>
<% else -%>
#noauth = true
<% end -%>
<% if @auth -%>
auth = <%= auth %>
<% else -%>
#auth = true
<% end -%>

# Verbose logging output.
<% if @verbose -%>
verbose = <%= verbose %>
<% else -%>
#verbose = true
<% end -%>

# Inspect all client data for validity on receipt (useful for
# developing drivers)
<% if @objcheck -%>
objcheck = <%= objcheck %>
<% else -%>
#objcheck = true
<% end -%>

# Enable db quota management
<% if @quota -%>
quota = <%= quota %>
<% else -%>
#quota = true
<% end -%>

# Set oplogging level where n is
#   0=off (default)
#   1=W
#   2=R
#   3=both
#   7=W+some reads
<% if @oplog -%>
oplog = <%= oplog %>
<% else -%>
#oplog = 0
<% end -%>

# Diagnostic/debugging option
<% if @nocursors -%>
nocursors = <%= nocursors %>
<% else -%>
#nocursors = true
<% end -%>

# Ignore query hints
<% if @nohints -%>
nohints = <%= nohints %>
<% else -%>
#nohints = true
<% end -%>

# Disable the HTTP interface (Defaults to port+1000).
<% if @nohttpinterface -%>
nohttpinterface = <%= nohttpinterface %>
<% else -%>
#nohttpinterface = true
<% end -%>

# Turns off server-side scripting.  This will result in greatly limited
# functionality
<% if @noscripting -%>
noscripting = <%= noscripting %>
<% else -%>
#noscripting = true
<% end -%>

# Turns off table scans.  Any query that would do a table scan fails.
<% if @notablescan -%>
notablescan = <%= notablescan %>
<% else -%>
#notablescan = true
<% end -%>

# Disable data file preallocation.
<% if @noprealloc -%>
noprealloc = <%= noprealloc %>
<% else -%>
#noprealloc = true
<% end -%>

# Specify .ns file size for new databases.
<% if @nssize -%>
nssize = <%= nssize %>
<% else -%>
#nssize = <size>
<% end -%>

# Accout token for Mongo monitoring server.
<% if @mms_token -%>
mms-token = <%= mms_token %>
<% else -%>
#mms-token = <token>
<% end -%>

# Server name for Mongo monitoring server.
<% if @mms_name -%>
mms-name = <%= mms_name %>
<% else -%>
#mms-name = <server-name>
<% end -%>

# Ping interval for Mongo monitoring server.
<% if @mms_interval -%>
mms-interval = <%= mms_interval %>
<% else -%>
#mms-interval = <seconds>
<% end -%>

