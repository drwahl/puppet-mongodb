master = <%= master %>
<% else -%>
#master = true
<% end -%>
<% if @master_source -%>
source = <%= master_source %>
<% else -%>
#source = slave.example.com
<% end -%>
# Address of a server to pair with.
<% if @pairwith -%>
pairwith = <%= pairwith %>
<% else -%>
#pairwith = <server:port>
<% end -%>
# Automatically resync if slave data is stale
<% if autoresync == true -%>
autoresync
<% else -%>
#autoresync
<% end -%>
